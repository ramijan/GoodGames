<%= form_for [@game, @review] do |f| %>
  <div class="form-group">
    <%= f.label :rating, "Star rating:" %>
    <%= f.select(:rating, [['5 stars',5],['4 stars',4],['3 stars',3],['2 stars',2],['1 star',1]], {include_blank: false}, class:'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title, placeholder:'review title...', class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Review:" %>
    <%= f.text_area :body, placeholder:'review...', class:'form-control', rows:'10' %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit review", class:'btn btn-lg btn-success' %>
  </div>
<% end %>